<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFB8A7"
    android:padding="@dimen/parent_padding"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"

        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <Button
        android:id="@+id/btn_latest"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Latest"
        android:textSize="11sp"
        android:layout_gravity="right"
        />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textSize="11sp"
            android:layout_gravity="right"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textSize="11sp"
            android:layout_gravity="right"
            />

</androidx.appcompat.widget.Toolbar>



    <ImageView
        android:id="@+id/imgView"
        android:layout_below="@id/my_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/marginTop_desc"
        android:shadowColor="#ff0000"
        android:layout_below="@id/imgView"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/btn_repeat"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_repeatButton"
        android:text="@string/repeat"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desc" />

    <LinearLayout
        android:layout_width="@dimen/linearLayout_width"
        android:layout_height="@dimen/linearLayout_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/marginTop_button"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/marginStart_buttonPrev"
            android:background="@drawable/leftarrow"
            android:src="?android:selectableItemBackground" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_marginTop="@dimen/marginTop_button"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:src="?android:selectableItemBackground"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/marginStart_buttonNext"
            android:background="@drawable/rightarrow" />
    </LinearLayout>

</RelativeLayout>